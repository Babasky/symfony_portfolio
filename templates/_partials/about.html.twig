<section id="a-propos" class="py-16 bg-white">
	<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex flex-col md:flex-row items-center">
			<div class="md:w-1/2 mb-10 md:mb-0 animate-fadeIn">
                {% if about is defined and about is not null %}
                    <h2 class="text-3xl font-bold text-gray-800 mb-6">{{about.title}}</h2>
                    <p class="text-gray-600 mb-6">{{about.description}}</p>
                {% endif %}
                
				<div class="space-y-4 mb-8">
                    {% if experiences is defined and experiences is not empty %}
                        {% for experience in experiences %}
                        <div class="flex items-start">
                            <div class="flex-shrink-0 mt-1">
                                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-check text-blue-500"></i>
                                </div>
                            </div>
                            <div class="ml-3">
                                <p class="text-gray-700">{{experience.title}}</p>
                            </div>
                        </div>
                        {% endfor %}
                    {% endif %}
				</div>
				{% if about.cv is defined and about.cv is not empty %}
					<a href="{{ asset('uploads/cv/' ~ about.cv) }}" target="_blank" class="contact-btn inline-flex items-center bg-blue-500 text-white px-6 py-3 rounded-md">
						<i class="fas fa-download mr-2"></i>
						Télécharger mon CV
					</a>
				{% endif %}
				</div>

				<div class="md:w-1/2 md:pl-12 animate-fadeIn" style="animation-delay: 0.3s;">
					<div class="bg-gray-50 p-8 rounded-lg">
						<h3 class="text-xl font-semibold text-gray-800 mb-6">Mon Parcours</h3>

					<div class="space-y-8">
						{% if parcours is defined and parcours is not empty %}
							{% for item in parcours %}
								<div class="flex">
									<div class="flex-shrink-0 mr-4">
										<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
											<i class="fas fa-briefcase text-blue-500"></i>
										</div>
									</div>
									<div>
										<h4 class="font-medium text-gray-800">{{item.title}}</h4>
										<p class="text-sm text-gray-500 mb-1">{{item.subTitle}}</p>
										<p class="text-gray-600">{{item.description}}</p>
									</div>
								</div>
							{% endfor %}
						{% endif %}
						
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
