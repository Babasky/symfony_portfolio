<section id="contact" class="py-16 bg-gray-50">
	<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-3xl font-bold text-gray-800 mb-4">{% trans %}Contact Me{% endtrans %}</h2>
			<p class="text-gray-600 max-w-2xl mx-auto">{% trans %}You have a project in mind or want to discuss an opportunity? I would be happy to talk with you.{% endtrans %}</p>
		</div>

		<div class="flex flex-col md:flex-row">
			<div class="md:w-1/2 mb-10 md:mb-0 md:pr-8 animate-fadeIn">
				<div class="bg-white p-8 rounded-lg shadow-sm">
					<h3 class="text-xl font-semibold text-gray-800 mb-6">{% trans %}Contact Information{% endtrans %}</h3>

					<div class="space-y-6">
                        {% if informationContact is defined and informationContact is not null %}
                            <div class="flex items-start">
                                <div class="flex-shrink-0 mt-1">
                                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                        <i class="fas fa-envelope text-blue-500"></i>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <h4 class="text-sm font-medium text-gray-500">{% trans %}Email{% endtrans %}</h4>
                                    <p class="text-gray-700">{{ informationContact.email }}</p>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <div class="flex-shrink-0 mt-1">
                                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                        <i class="fas fa-phone-alt text-blue-500"></i>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <h4 class="text-sm font-medium text-gray-500">{% trans %}Phone{% endtrans %}</h4>
                                    <p class="text-gray-700">{{ informationContact.phone }}</p>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <div class="flex-shrink-0 mt-1">
                                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                        <i class="fas fa-map-marker-alt text-blue-500"></i>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <h4 class="text-sm font-medium text-gray-500">{% trans %}Address{% endtrans %}</h4>
                                    <p class="text-gray-700">{{ informationContact.adress }}</p>
                                </div>
                            </div>
                        {% endif %}
					</div>

					<div class="mt-8">
						<h3 class="text-xl font-semibold text-gray-800 mb-6">{% trans %}Social Media{% endtrans %}</h3>
						<div class="flex space-x-4">
							{% if socials is defined and socials is not empty %}
								{% for social in socials %}
									<a href="{{ social.link }}" target="_blank" class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center text-blue-500 hover:bg-blue-500 hover:text-white transition-colors duration-300">
										<i class="{{ social.icon }}"></i>
									</a>
								{% endfor %}
							{% endif %}
						</div>
					</div>
				</div>
			</div>

			<div class="md:w-1/2 animate-fadeIn" style="animation-delay: 0.3s;">
				<div class="bg-white p-8 rounded-lg shadow-sm">
					{% include "layouts/flash_message.html.twig" %}
					<h3 class="text-xl font-semibold text-gray-800 mb-6">{% trans %}Send me a message{% endtrans %}</h3>

					{{ form_start(form) }}
					{{ form_row(form) }}
					<button type="submit" class="contact-btn w-full bg-blue-500 text-white px-6 py-3 rounded-md hover:bg-blue-600">
						{% trans %}Send message{% endtrans %}
						<i class="fas fa-paper-plane ml-2"></i>
					</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
</section>
