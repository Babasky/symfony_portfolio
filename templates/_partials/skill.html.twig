<section id="competences" class="py-16 bg-gray-50">
	<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-3xl font-bold text-gray-800 mb-4">{% trans %}My Skills{% endtrans %}</h2>
			<p class="text-gray-600 max-w-2xl mx-auto">{% trans %}A diverse set of technical and creative skills to meet all your digital needs.{% endtrans %}</p>
		</div>

		<div
			class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% if skills is defined and skills is not empty %}
                {% for skill in skills %}
                    <div class="bg-white p-8 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 animate-fadeIn" style="animation-delay: 0.1s;">
                        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-6">
                            <i class="{{ skill.icon }} text-blue-500 text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-800 mb-3">{{skill.getTranslatedName(app.request.locale)}}</h3>
                        <p class="text-gray-600 mb-4">{{skill.getTranslatedDescription(app.request.locale)}}</p>
                        <div class="flex flex-wrap gap-2">
                            {% for tech in skill.technologies %}
                                <span class="bg-blue-100 text-blue-800 text-xs px-3 py-1 rounded-full">{{ tech.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
		</div>

		<!-- Graphique de compÃ©tences -->
		<div class="mt-16 bg-white p-8 rounded-lg shadow-sm animate-fadeIn" style="animation-delay: 0.4s;">
			<h3 class="text-xl font-semibold text-gray-800 mb-6">{% trans %}Mastery of Technologies{% endtrans %}</h3>
			<div class="space-y-6">
                {% if technologies is defined and technologies is not empty %}
                    {% for tech in technologies %}
                        <div>
                            <div class="flex justify-between mb-1">
                                <span class="text-gray-700">{{ tech.name }}</span>
                                <span class="text-gray-500">{{ tech.pourcentage }}</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2.5">
                                <div class="bg-blue-500 h-2.5 rounded-full" style="width: {{ tech.pourcentage }}"></div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
			</div>
		</div>
	</div>
</section>
