<section id="projets" class="py-16 bg-white">
	<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-3xl font-bold text-gray-800 mb-4">{% trans %}My Recent Projects{% endtrans %}</h2>
			<p class="text-gray-600 max-w-2xl mx-auto">{% trans %}Discover a selection of my most significant achievements, combining design and functionality.{% endtrans %}</p>
		</div>

		<div
			class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{% if projects is defined and projects is not empty %}
                {% for project in projects %}
                    <div class="project-card bg-white rounded-lg overflow-hidden shadow-md animate-fadeIn" style="animation-delay: 0.1s;">
                        <div class="h-48 bg-gradient-to-r from-blue-400 to-indigo-500 flex items-center justify-center">
                            <i class="{{project.icon}} text-white text-6xl"></i>
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-semibold text-gray-800 mb-2">{{project.name}}</h3>
                            <p class="text-gray-600 mb-4">{{project.getTranslatedDescription(app.request.locale)}}</p>
                            <div class="flex flex-wrap gap-2 mb-4">
                                {% for outil in project.outils %}
                                    <span class="bg-blue-100 text-blue-800 text-xs px-3 py-1 rounded-full">{{outil.name}}</span>
                                {% endfor %}
                            </div>
                            {% if project.link is defined and project.link is not null %}
                                <a href="{{project.link}}" target="_blank" class="text-blue-500 font-medium hover:text-blue-700">{% trans %}See the project{% endtrans %} â†’</a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
            
		</div>
	</div>
</section>
